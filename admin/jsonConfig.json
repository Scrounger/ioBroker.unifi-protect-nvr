{
	"i18n": true,
	"type": "panel",
	"items": {
		"host": {
			"type": "text",
			"label": "IP Adress / Hostname",
			"newLine": true
		},
		"user": {
			"type": "text",
			"label": "Username"
		},
		"password": {
			"type": "password",
			"label": "Password"
		},
		"motionSnapshot": {
			"type": "checkbox",
			"label": "Motion Snapshot",
			"newLine": true
		},
		"motionSnapshotWidth": {
			"type": "number",
			"label": "Motion Snapshot Width",
			"min": 0,
			"disabled": "!data.motionSnapshot"
		},
		"motionSnapshotHeight": {
			"type": "number",
			"label": "Motion Snapshot Height",
			"min": 0,
			"disabled": "!data.motionSnapshot"
		},
		"motionSnapshotDelay": {
			"type": "number",
			"label": "Motion Snapshot Delay (-1 = auto)",
			"min": -1,
			"disabled": "!data.motionSnapshot"
		},
		"motionThumb": {
			"type": "checkbox",
			"label": "Motion Thumbnail",
			"newLine": true
		},
		"motionThumbWidth": {
			"type": "number",
			"label": "Motion Thumbnail Width",
			"min": 0,
			"disabled": "!data.motionThumb"
		},
		"motionThumbHeight": {
			"type": "number",
			"label": "Motion Thumbnail Height",
			"min": 0,
			"disabled": "!data.motionThumb"
		}
	}
}